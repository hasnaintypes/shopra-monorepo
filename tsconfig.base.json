{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@config/*": ["packages/config/src/*"],
      "@shopra/ui": ["packages/ui/src/*"],
      "@shopra/ui/*": ["packages/ui/src/*"]
    },
    "allowJs": true,
    "incremental": true
  },
  "exclude": ["node_modules", "dist"]
}
