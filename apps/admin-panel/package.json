{
  "name": "admin-panel",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3002",
    "build": "next build",
    "start": "next start -p 3002",
    "lint": "eslint",
    "test": "jest --passWithNoTests",
    "test:ci": "jest --runInBand",
    "test:watch": "jest --watch",
    "docker:build:dev": "docker build -f ../../Dockerfile.dev --build-arg APP=admin-panel -t admin-panel-dev ../..",
    "docker:build:prod": "docker build -f ../../Dockerfile.prod --build-arg APP=admin-panel -t admin-panel-prod ../..",
    "docker:run:dev": "docker run -p 3002:3000 admin-panel-dev",
    "docker:run:prod": "docker run -p 3002:3000 admin-panel-prod"
  },
  "dependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "next": "15.5.2"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@tailwindcss/postcss": "^4",
    "tailwindcss": "^4",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "@eslint/eslintrc": "^3",
    "jest": "^30.1.1",
    "@types/jest": "^30.0.0"
  }
}
