{
  "name": "@shopra/prisma",
  "version": "0.1.0",
  "description": "Shared Prisma client for Shopra monorepo (NestJS)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "prisma",
    "src"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint 'src/**/*.{ts,js}' --fix",
    "test": "jest --passWithNoTests --setupFiles ./jest.setup.js",
    "prisma:generate": "prisma generate --schema=./prisma/schema.prisma",
    "prisma:db:push": "prisma db push --schema=./prisma/schema.prisma",
    "prisma:db:pull": "prisma db pull --schema=./prisma/schema.prisma",
    "prisma:format": "prisma format --schema=./prisma/schema.prisma",
    "prisma:seed": "prisma db seed --preview-feature"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@shopra/config": "workspace:*",
    "@shopra/logging": "workspace:*"
  },
  "devDependencies": {
    "prisma": "^5.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "jest-mock-extended": "^2.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@nestjs/common": ">=10.0.0",
    "@nestjs/core": ">=10.0.0"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma"
  },
  "publishConfig": {
    "access": "public"
  }
}
