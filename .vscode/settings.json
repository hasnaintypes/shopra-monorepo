{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    "source.organizeImports": "always"
  },
  "eslint.enable": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "prettier.requireConfig": true,
  "files.exclude": {
    "**/.next": true,
    "**/dist": true,
    "**/build": true,
    "**/node_modules": true,
    "**/coverage": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.wordWrap": "on",
  "files.autoSave": "onFocusChange",
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.next": true,
    "**/coverage": true
  },
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "cSpell.language": "en,typescript,javascript,json,markdown",
  "cSpell.enabled": true,
  "cSpell.words": [
    "Shopra",
    "Kafka",
    "NestJS",
    "Nextjs",
    "TensorFlow",
    "Shadcn",
    "pnpm",
    "nx",
    "Prisma",
    "Vercel",
    "Netlify",
    "Husky",
    "Redis",
    "MongoDB"
  ]
}
